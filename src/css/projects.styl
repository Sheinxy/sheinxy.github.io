#projects
    text-align center

    background-color var(--secondary-color)

    ul
        padding 0

        display flex
        flex-direction row
        justify-content space-between
        align-items center
        flex-wrap wrap

        list-style none
        
        .project
            margin 25px

            min-width 250px
            max-width 600px
            width 100%
            height 150px

            border-radius 25px

            background-color var(--primary-color)

        .project-info
            padding 25px
            margin-left 10px

            display flex
            flex-direction row
            justify-content space-between
            align-items center

            .name-description
                text-align center

                h3 
                    margin-bottom 10px

                @media only screen and (min-width 400px)
                    h3
                        font-size 200%
                
                @media only screen and (max-width 400px)
                    h3
                        font-size 100%
                    p
                        font-size 50%
                    
                


        .project-links
            position relative
            top -100%

            display flex
            flex-direction row
            justify-content space-between
            align-items center
            flex-wrap wrap
            
            padding 10px
            padding-left 25px

            width 100%
            height 100%

            border-radius 25px

            background-color var(--nav-secondary-color)

            clip-path circle(0% at -50% -50%)

            transition clip-path 1s ease-in, background-color 1s ease-in

            span 
                float left

        .link-button
            padding 5px
            margin 5px

            width 45%
            height 45%

            display flex
            flex-direction row
            align-items center
            justify-content space-evenly

            border-radius 25px

            background-color var(--nav-secondary-color)

            img 
                width 20%
                height auto

                filter grayscale(var(--grayscale)) invert(var(--img-invert))

        .link-button:hover
            background-color var(--nav-primary-color)

            img, .project-link
                animation scaleInLess 1s infinite alternate


        .project-link
            color var(--text-color)
            font-size 150%

        .project-image
            width 100px
            height 100px

            border-radius 50px


        .project:hover
            .project-links
                background-color var(--primary-color)
                clip-path circle(170%)
            
        